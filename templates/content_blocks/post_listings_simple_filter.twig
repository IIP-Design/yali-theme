<section class='section cb_posts_simple_filter'>

	<h2 class='sf_title'>{{ title }}</h2>
	
	<div class='sf_filter'>
		<span class='sf_filter_item active'>All</span>
		<span class='sf_filter_item'>Articles</span>
		<span class='sf_filter_item'>Podcasts</span>
		<span class='sf_filter_item'>Videos</span>
		<span class='sf_filter_item'>Courses</span>
	</div>	

	<div class='ui stackable grid sf_posts'>		
		{% for post in posts %}

			{% if loop.index0 % 3 == 0 %}
			<div class='ui three column row sf_posts_row'>
			{% endif %}
			
				<article class='column sf_article'>
					<img class='sf_article_img' src='{{ post.featured_img_url }}'>
					<h5 class='sf_article_headline'><a href='{{ post.link }}'>{{ post.headline }}</a></h5>
					<p class='sf_article_excerpt'>{{ post.excerpt }}</p>
					{% if post.tags is not empty %}
					<div class='sf_article_tags'>
						{% for tag in post.tags  %}
						<a class='sf_article_tags_tag' href='/tag/{{ tag.slug }}'>{{ tag.name }}</a>
						{% endfor %}
					</div>
					{% endif %}
				</article>
			
			{% if loop.index is divisible by(3) %}
			</div>
			{% endif %}

		{% endfor %}
	</div>

	{% if show_more_block %}
	<div class='sf_more_content'>
		<h4 class='sf_more_content_link'><a href='/learning/'>More Articles <i class='angle right icon'></i></a></h4>
		<h4 class='sf_more_content_link'><a href='/content-type/podcast/'>More Podcasts <i class='angle right icon'></i></a></h4>
		<h4 class='sf_more_content_link'><a href='/courses/'>More Online Courses <i class='angle right icon'></i></a></h4>
	</div>
	{% endif %}
</section>