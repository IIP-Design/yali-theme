<link rel="stylesheet" href="{{ widget_css }}" type="text/css" media="all">

<section class='content-block full-width' style="background-color: {{ block_bg_color }}">
	<div class='ui container'>
		<h2 style="text-align: {{ title_alignment }}">{{ title }}</h2>
    <div class="content-block--excerpt" style="text-align: {{ excerpt_alignment }}">{{ excerpt }} </div>
    <div id="feed" style="margin-top: 2em; text-align: {{ text_alignment }}">LOADING Component...</div>
    <div class="content-block--button" style="text-align: {{ btn_text_alignment }}">
      <a class="ui animated button" href="{{ btn_link }}" {{ btn_new_win }} style="background-color: {{ btn_bg_color }}" tabindex="0">
        <div class="visible content"> {{ btn_label }}</div>
          <div class="hidden content">
            <i class="right arrow icon"></i>
          </div>
        </a>
      </div>
    </div>
	</div>
</section>


<script type="text/javascript" src="{{ widget_js }}"></script>
<script>
  if( CDP ) {
    CDP.widgets.ArticleFeed.new({
      selector: '#feed',
      sites: 'share.america.gov', 
      size: '3', 
      types: 'post', 
      langs: 'en-US',
      tags: '',
      categories: '',
      ui: {
        layout: 'default',
        imageShape: 'circle',
        direction: 'row',
        imageBorderWidth: '10px',             
        imageBorderColor: '#192856' 
      }
    }).render();
  }
</script> 