{% extends 'base.twig' %}

{% block content %}

{% set title_overlay_class = (header_url is not empty) ? 'title-overlay' : '' %}
{% set series_name = (post_data.post_series_names is not empty) ? post_data.post_series_names[0].name : '' %}

{% if header_url is not empty %}
<section 
	class='hero {% if header_url is not empty %}hero--bg_img{% endif %}' 
	{% if header_url is not empty %}style='background-image: url("{{ header_url }}"); background-size: cover;'{% endif %}
>
	<div class='hero-inner bottom_padd bottom_padd--thick'>
		<div class='hero-content ui container'>
			<h2 class='hero-h1'>{{ post_data.post_series_names[0].taxonomy }}:</h2>
			<h1>{{ post_data.post_series_names[0].name }}</h1>
			<p>{{ post_data.post_series_names[0].description }}</p>
		</div>
	</div>
</section>
{% endif %}

<section class='ui container {{ title_overlay_class }}'>	
	<h2 class='title-overlay_title'>{{ post_data.title.rendered }}</h2> 
	<div class='inner-container single_post'>
		<section class='section single_post_content'>
			<div>{{ post_data.content.rendered }}</div>
			
			<div class='single_post_tax'>				
				{% for term in taxonomy_terms %}
					{% if term.taxonomy == 'post_tag' %}
					<p class='tax_term'>
						<a href='/wp/tag/{{ term.slug }}'>{{ term.name }}</a>{% if not loop.last %},{% endif %}
					</p>
					{% elseif term.name != 'Uncategorized' %}
					<p class='tax_term'>
						<a href='/wp/{{ term.taxonomy }}/{{ term.slug }}'>{{ term.name }}</a>{% if not loop.last %},{% endif %}
					</p>					
					{% endif %}
				{% endfor %}			
			</div>
			
			<h4 class='archive_link'>
				<a 
					class='cta_link' 
					{% if series_name is not empty %}
					href='/wp/{{ post_data.post_series_names[0].taxonomy }}/{{ post_data.post_series_names[0].slug }}'
					{% else %}
					href='/wp/blog'
					{% endif %}
					>
					More from "{{ (series_name is not empty ? series_name : 'YALI Network in Action') }}" <i class='angle right icon'></i>
				</a>
			</h4>			
		</section>

