{% block head_wrapper %}

	{% include 'header.twig' %}
	{% block head %}
	{% endblock %}

	{{ tha_head_bottom() }}

	</head>
	
{% endblock %}

	<body {{ body_class() }}>

		{{ tha_body_top() }}

		<div class="site-container">
			<a class="skip-link screen-reader-text" href="#main">Skip to content</a>

			{{ tha_header_before() }}
			
			<!-- Shawn - Nav -->
			<nav class='nav ui top fixed menu'>
				<div class='nav_wrapper'>				
					<a href='{{ site.url }}' class='nav_siteurl'>
						<div class='img_placeholder'>
							<img src="{{ site.theme_url }}/assets/img/yali_logo_mark.svg">
						</div>				
						<span href='/yalinav'>Young African Leaders Initiative</span>
					</a>
					<div class='nav_right'>
						<div class='nav_join nav_join--mobile'>
							<p>JOIN THE NETWORK</p>
						</div>
						<ul class='nav_menu'>
							<span class='opaque_bg'></span>
							<li class='nav_menu_item ui dropdown'>					
								<div class='nav_menu_item_title-wrapper'>
									<span>YALI is </span>
									<span class='menuDropdown downArrow'></span>
								</div>
								<ul class='nav_menu_submenu menu'>
									<span class='opaque_bg'></span>
									<li class='nav_menu_submenu_item item'><a href="#">YALI Network</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">Mandela Washington Fellowship</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">Regional Leadership Centers</a></li>
								</ul>
							</li>
							<li class='nav_menu_item ui dropdown'>					
								<div class='nav_menu_item_title-wrapper'>
									<span>Action </span>
									<span class='menuDropdown downArrow'></span>
								</div>
								<ul class='nav_menu_submenu menu'>
									<span class='opaque_bg'></span>
									<li class='nav_menu_submenu_item item'><a href="#">#Africa4Her</a></li>						
									<li class='nav_menu_submenu_item item'><a href="#">#YALIGoesGreen</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">#YALIStands4All</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">#YALIUnites</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">#YALIVotes</a></li>
								</ul>
							</li>				
							<li class='nav_menu_item ui dropdown'>					
								<div class='nav_menu_item_title-wrapper'>
									<span>Learning </span>
									<span class='menuDropdown downArrow'></span>
								</div>
								<ul class='nav_menu_submenu menu'>
									<span class='opaque_bg'></span>
									<li class='nav_menu_submenu_item item'><a href="#">Courses</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">Professional Development</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">YALI Voices</a></li>
								</ul>
							</li>
							<li class='nav_menu_item ui dropdown'>					
								<div class='nav_menu_item_title-wrapper'>
									<span>In-person </span>
									<span class='menuDropdown downArrow'></span>
								</div>
								<ul class='nav_menu_submenu menu'>
									<span class='opaque_bg'></span>
									<li class='nav_menu_submenu_item item'><a href="#">YALI Learns</a></li>
									<li class='nav_menu_submenu_item item'><a href="#">Connect with Members</a></li>
								</ul>
							</li>
							<li class='nav_join nav_join--desktop'>
								<p>JOIN THE NETWORK</p>
							</li>					
							<li class='nav_menu_item nav_menu_item--search ui search'>
								<div class='search_wrapper'>
									<input type='text' placeholder='Search Placeholder'>
									<span class='search-icon_wrapper'>
										<i class='search icon'></i>	
									</span>							
								</div>						
							</li>
							<li class='nav_menu_item nav_menu_item--social'>
								<div>
									<p>Stay Connected with us:</p>
									<i class='facebook f icon'></i>
									<i class='linkedin icon'></i>
									<i class='twitter icon'></i>
								</div>
							</li>
						</ul>				
					</div>
				</div><!-- nav_right -->

				<div class='burger'>
					<span></span>
					<span></span>
					<span></span>
				</div>		
			</nav>
			<!-- End Nav -->

			<header id="masthead" class="site-header">
				
				{% block header %}
					<div class="ui container" style="display: none;">
						<nav id="nav-main" class="ui text menu top fixed" role="navigation">
							<h1 class="hdr-logo item">
								<a class="hdr-logo-link" href="{{ site.url }}" rel="home">{{ site.name }}</a>
							</h1>

							{% include "menu.twig" with {'menu': site.get_menu(2)} %}

							<div class="right item">
								<button class="ui button">Join the Network</button>

								<!-- cdp: search pulled right as 'join the network has to go here as well-->
								<div class="ui input">
									<input type="text" placeholder="Search...">
								</div>
							</div>						
						</nav><!-- #nav -->
					</div>
				{% endblock %}
				
			</header><!-- #header -->

			{{ tha_content_before() }}

			<main id="content" role="main" name="main" class="ui container">
			
				{{ tha_content_top() }}
				
				{% if title %}
					<h1>{{ title }}</h1>
				{% endif %}

				<div class="wrapper {{ sidebar_class }}">
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>

				{% if sidebar %}
					<aside class="layout-sidebar">
						{{ sidebar }}
					</aside>
				{% endif %}

				{{ tha_content_bottom() }}

			</main><!-- #main -->

			{{ tha_content_after() }}

			{% block footer %}
				<footer id="footer">
					{% include 'footer.twig' %}
				</footer>
			{% endblock %}

			{{ tha_footer_after() }}
		
		</div><!-- .site-container -->

		{{ tha_body_bottom() }}
		{{ wp_footer() }}
	</body>
</html>
