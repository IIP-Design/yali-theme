{% block head_wrapper %}

	{% include 'header.twig' %}
	{% block head %}
	{% endblock %}

	{{ tha_head_bottom() }}

	</head>
	
{% endblock %}

	<body {{ body_class() }}>

		{{ tha_body_top() }}

		<div class="site-container">
			<a class="skip-link screen-reader-text" href="#main">Skip to content</a>

			{{ tha_header_before() }}
			
			<header class="ui fixed inverted menu">
				{% block header %}
					<nav class="ui container">
						
						<a href="{{ site.url }}" class="header item">
        			<img class="logo" src="{{ site.logo }}">
							{{ site.name }}
						</a>
						
						<!-- main nav -->
						{% include "menu.twig" with {'menu': site.get_menu(2)} %}
						
						<!-- pull 'join the network right -->
						<div class="ui input right item">
							<button class="ui button right item">Join the Network</button>
						</div>

						<!--  pull cdp: search right -->
						<div class="ui input right item">
							<input type="text" placeholder="Search...">
						</div>

					</nav>
				{% endblock %}
			</header>

			{{ tha_content_before() }}

			<main class="site-content" name="main" role="main">
			
				{{ tha_content_top() }}
						
				<!-- overrride default content block with page specifc content -->
				<div class="">
					{% block content %}
							<div class="ui container">
								<p>Content area</p>
							</div>
					{% endblock %}
				</div>
			
				{% if sidebar %}
					<aside class="layout-sidebar">
						{{ sidebar }}
					</aside>
				{% endif %}

				{{ tha_content_bottom() }}

			</main><!-- #main -->

			{{ tha_content_after() }}

			{% block footer %}
				<footer id="footer" class="ui inverted vertical footer segment">
					<div class="ui container">
						{% include 'footer.twig' %}
					</div>
				</footer>
			{% endblock %}

			{{ tha_footer_after() }}
		
		</div><!-- .site-container -->

		{{ tha_body_bottom() }}
		{{ wp_footer() }}
	</body>
</html>
