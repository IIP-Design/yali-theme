{% block head_wrapper %}

	{% include 'header.twig' %}
	{% block head %}
	{% endblock %}

	{{ tha_head_bottom() }}

	</head>
	
{% endblock %}

	<body {{ body_class() }}>

		{{ tha_body_top() }}

		<div class="site-container">
			<a class="skip-link screen-reader-text" href="#main">Skip to content</a>

			{{ tha_header_before() }}
			
			<header id="masthead" class="site-header">
				
				{% block header %}
					<div class="ui container">
						<nav id="nav-main" class="ui inverted top fixed menu" role="navigation">
							<h1 class="hdr-logo item">
								<a class="hdr-logo-link" href="{{ site.url }}" rel="home">{{ site.name }}</a>
							</h1>

							{% include "menu.twig" with {'menu': site.get_menu(2)} %}

							<div class="right item">
								<button class="ui button">Join the Network</button>

								<!-- cdp: search pulled right as 'join the network has to go here as well-->
								<div class="ui input">
									<input type="text" placeholder="Search...">
								</div>
							</div>
						
						</nav><!-- #nav -->
					</div>
				{% endblock %}
				
			</header><!-- #header -->

			{{ tha_content_before() }}

			<main id="content" role="main" name="main" class="ui container">
			
				{{ tha_content_top() }}
				
				{% if title %}
					<h1>{{ title }}</h1>
				{% endif %}

				<div class="wrapper {{ sidebar_class }}">
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>

				{% if sidebar %}
					<aside class="layout-sidebar">
						{{ sidebar }}
					</aside>
				{% endif %}

				{{ tha_content_bottom() }}

			</main><!-- #main -->

			{{ tha_content_after() }}

			{% block footer %}
				<footer id="footer">
					{% include 'footer.twig' %}
				</footer>
			{% endblock %}

			{{ tha_footer_after() }}
		
		</div><!-- .site-container -->

		{{ tha_body_bottom() }}
		{{ wp_footer() }}
	</body>
</html>

