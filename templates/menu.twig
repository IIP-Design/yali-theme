{% if menu %}
	{% for item in menu %}
    <div class="item">
    <a target="{{ item.target }}" href="{{ item.link }}">
    {{ item.title }}
    <i class="dropdown icon"></i>
    </a>
    </div>
	{% endfor %}
{% endif %}



