{% extends 'base.twig' %}

{% block content %}
<section class='hero' data-responsive-background-image>
	<img src="{{ header_url }}"
      sizes="{{ sizes }}"
      srcset="{{ srcset }}">
	<div class='hero-inner bottom_padd bottom_padd--thin'>
	    <div class='hero-content ui container'>
	        <h1 class="hero-headline">{{ page_data.title.rendered }}</h1>        
	        {{ page_data.content.rendered }}
	    </div>
    </div>
</section>
<section class='ui container'>
	<div class='inner-container'>
		<div class='ui stackable grid campaigns_list'>
			{% for campaign in campaigns %}
			<div class='row list_item'>
				<div class='six wide column'>
					<span 
						class='list_item_img' 
						style='background-image: url("{{ campaign.featured_img_url }}"); background-size: cover;'>
					</span>					
				</div>
				<div class='nine wide column'>
					<div class='list_item_content'>
						<h3>
							<a href='{{ campaign.link }}' class='list_item_link'>{{ campaign.title.rendered }}</a>
						</h3>
						<div class='list_item_excerpt'>{{ campaign.excerpt.rendered }}</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</section>
<section class='social'>
	{{ social_block }}
</section>
{% endblock %}