{% extends 'base.twig' %}

{% block content %}
<section class="hero">
    <img class="ui fluid image" src="{{ header_url }}" srcset="{{ srcset }}" sizes="{{ size }}" alt="{{ header_url }}">
</section>
<section class="ui container">
	<h2 class='title-overlay_title'>{{ page_data.title.rendered }}</h2>
	<div class='inner-container campaign'>		      
		<section class='page-content'>
			{{ page_data.content.rendered }}          
		</section>

		{% include 'content_blocks/post-single.twig' with 
			{
				title: 'Take the course(s)',
				img_src: 'data:image/gif;base64,R0lGODlhAQABAPAAAMzMzP///yH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==',
				headline: 'Understanding Human Rights',
				excerpt: 'No practice or tradition is greater than the human rights that belong to all of us. This course provides details on the evolution of laws and protections and how to work on behalf of human rights.',
				course: 'true'
			} 
		%}

		<section class='section promote'>
			<h3>Promote {{ page_data.title.rendered }}</h3>
			<p>Share the {{ page_data.title.rendered }} announcement on Facebook or Twitter using the buttons below.</p>	
			<div class='ui stackable grid promote_item'>
				<div class='eight wide column'>
					<a href='#' target='_blank' class='promote_item_share promote_item_share--facebook'>						
						<span class='link link--facebook'></span>
						<span class='link--text'>Share on Facebook</span>
					</a>					
				</div>
				<div class='eight wide column promote_item'>
					<a href='#' target='_blank' class='promote_item_share promote_item_share--twitter'>						
						<span class='link link--twitter'></span>
						<span class='link--text'>Share on Twitter</span>
					</a>					
				</div>
			</div>
			<p>Download, use and share these graphics on social media.</p>						
			<div class='ui stackable grid promote_item'>
				{% for promo in promo_data %}
				<div class='eight wide column promote_item'>
					<div class='promote_item_img' data-preview-image='{{ promo.image_url }}' style='background-image: url({{ promo.image_url }}); background-size: cover;'></div>
					<p class='promote_item_text'>{{ promo.image_text }}</p>
				</div>				
				{% endfor %}
			</div>
		</section>		

		<section class='section org_event'>
			<h3>Organize an event</h3>
			<p class='org_event_text'>Organize a <a href='#'>#YALILearns</a> event and facilitate <a href='#'><em>Understanding Human Rights</em></a> to raise awareness and educate
				your community about protecting human rights. Use our facilitation guide or presentation template to 
				help.</p>
			<div class='ui stackable grid org_event_items'>
				{% for file in orgevent_data %}
				<div class='eight wide column org_event_item'>
					<a href='{{ file.file_url }}' target='target_blank' class='cta_link'>{{ file.file_name }}</a>
				</div>
				{% endfor %}
			</div>												
		</section>

		<section class='section survey'>
			<h3>Tell us about your {{ page_data.title.rendered }} event</h3>
			<p>Take this short survey to let us know how your {{ page_data.title.rendered }} event turned out.</p>
			<div class='ui stackable grid'>
				<div class='eight wide column'>
					<a href="#" class='cta_link'>Followup Event Report</a>
				</div>
			</div>			
		</section>

		{{ social_block }}

		{% include 'content_blocks/post-grid.twig' with 
			{
				headline: 'Learn more about human rights',
				posts: [
					{
						link: 'http://yali.rebuild.local/wp/lorem-ipsum/',
						title: 'Post 1 Lorem ipsum set abet ipsum', 
						excerpt: 'Lorem ipsum set abet ipsum Lorem ipsum set abet ipsum', 
						tags: [
							{ 'term_id': '4', name: 'tag 1', slug: 'tag-1' },
							{ 'term_id': '5', name: 'tag 2', slug: 'lorem' },
							{ 'term_id': '6', name: 'tag 3', slug: 'ipsum' }
						],
						featured_img_url: 'data:image/gif;base64,R0lGODlhAQABAPAAAMzMzP///yH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=='
					},
					{
						link: 'http://yali.rebuild.local/wp/lorem-ipsum/',
						title: 'Post 2 Lorem ipsum set abet ipsum', 
						excerpt: 'Lorem ipsum set abet ipsum Lorem ipsum set abet ipsum', 
						tags: [
							{ 'term_id': '4', name: 'tag 1', slug: 'tag-1' },
							{ 'term_id': '5', name: 'tag 2', slug: 'lorem' },
							{ 'term_id': '6', name: 'tag 3', slug: 'ipsum' }
						],
						featured_img_url: 'data:image/gif;base64,R0lGODlhAQABAPAAAMzMzP///yH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=='
					},
					{
						link: 'http://yali.rebuild.local/wp/lorem-ipsum/',
						title: 'Post 3 Lorem ipsum set abet ipsum', 
						excerpt: 'Lorem ipsum set abet ipsum Lorem ipsum set abet ipsum', 
						tags: [
							{ 'term_id': '4', name: 'tag 1', slug: 'tag-1' },
							{ 'term_id': '5', name: 'tag 2', slug: 'lorem' },
							{ 'term_id': '6', name: 'tag 3', slug: 'ipsum' }
						],
						featured_img_url: 'data:image/gif;base64,R0lGODlhAQABAPAAAMzMzP///yH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==',
						featured_post: 'true'
					}
				]
			} 
		%}

		{% include 'content_blocks/honeycomb.twig' with 
			{ 				
				headline: 'Stay Involved',
				subheadline: 'Check out other YALI Network Campaigns',	
				content: campaigns,
				bg_color: 'lightblue'
			} 
		%}		

	</div>
</section>
{% endblock %}