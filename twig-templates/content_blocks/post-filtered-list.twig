

<section class='cb full-width' style="background-color: {{ block_bg_color }}">
	<div class='ui container'>
    <div class='inner-container'>
  		<h2 class="{{ title_underline }}" style="text-align: {{ title_alignment }}">{{ title }}</h2>
      <p class="cb_excerpt" style="text-align: {{ excerpt_alignment }}">{{ excerpt }} </p>
      
      <!-- attach filters -->
      <div class="cb_dropdown cb-cdp-filters" data-target="{{ selector }}">
      {% for filter in filters %}
        {% if filter == 'sort' %}
          <select name="sort" multiple="" class="ui dropdown" aria-label="sort">
            <option value="">Sort By</option>
            <option value="recent">Most Recent</option>
            <option value="recent">A-Z</option>
          </select>
        {% else %}
         <select name="{{ filter }}" multiple="" class="ui loading dropdown" aria-label="{{ filter }}">
            <option value="">{{ filter |capitalize }}</option>
          </select>
        {% endif %}
      {% endfor %}
      </div>
      <!-- attach article feed module -->
      <div id="{{ selector }}" data-content-type='cdp-filtered-list'  style="margin-top: 2em; text-align: {{ text_alignment }}">LOADING Component...</div>
    
       <!-- ashow more button -->
      {% if btn_label is not empty or btn_link is not empty %}
      <div class="cb_button" style="text-align: {{ btn_text_alignment }}">
        <button id="btn-{{ selector }}" class="ui button" style="background-color: {{ btn_bg_color }}" tabindex="0">
          <div style="color: {{ btn_label_color }}"> {{ btn_label }}
            <i style="color:  {{ btn_label_color }}" class="caret down icon"></i>
          </div>
        </button>
      </div>
      {% endif %}

    </div><!-- inner-container -->
  </div>
</section>