@supports (display: grid) {
  #{{ selector }} .article-item-group {
    display: grid;
    grid-template-columns: 1fr;
    grid-column-gap: 1rem;
    grid-row-gap: 2rem;
  }

  #{{ selector }} .article-item {
    padding: 0;
    overflow: hidden;
  }

  #{{ selector }} .article-item .article-image {
    height: 37.5vw;
  }

  #{{ selector }} .article-content > .article-title {
    margin-bottom: 0;
  }

  #{{ selector }} .article-content > p {
    margin-bottom: .7rem;
    max-width: 66ch;
  }

  #{{ selector }} .article-item:nth-child(n+2) .article-image {
    min-width: 13.75rem;
  }

  @media (min-width: 48em) {
    #{{ selector }} .article-item:nth-child(n+2) {
      display: grid;
      grid-template-columns: 1fr 2fr;
      grid-gap: 1rem;
    }

    #{{ selector }} .article-item:nth-child(n+2) .article-media {
      padding-bottom: 0;
    }

    #{{ selector }} .article-item:nth-child(n+2) .article-image {
      height: initial;
    }
  }

  @media (min-width: 71.25em) {
    #{{ selector }} .article-item-group {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat({{ num_rows }}, 13.75rem);
      grid-template-areas: 'primary secondary'
                           'primary tertiary';
      grid-gap: 1.5rem;
      overflow: hidden;
    }

    #{{ selector }} .article-item:first-child {
      position: relative;
      grid-area: primary;
    }

    #{{ selector }} .article-item:nth-child(2) {
      grid-area: secondary;
    }

    #{{ selector }} .article-item:nth-child(3) {
      grid-area: tertiary;
    }
  
    #{{ selector }} .article-item:nth-child(n+2) {
      border: 1px solid #ddd;
    }
  
    #{{ selector }} .article-item:first-child > .article-content {
      position: absolute;
      bottom: 0;
      padding: 1rem;
      width: 100%;
      background-color: rgba(0, 0, 0, .2);
      background: linear-gradient(rgba(0, 0, 0, .075), rgba(0, 0, 0, .5));
    }
  
    #{{ selector }} .article-item:first-child > .article-content * {
      color: #fff !important;
      text-shadow: 0 0 .5rem rgba(0, 0, 0, .6);
    }

    #{{ selector }} .article-item:first-child > .article-content [class$="_link"]:active,
    #{{ selector }} .article-item:first-child > .article-content [class$="_link"]:hover,
    #{{ selector }} .article-item:first-child > .article-content [class$="_link"]:focus {
      border-bottom: 2px dotted #fff;
    }
  
    #{{ selector }} .article-item:first-child .article-image {
      height: 29rem;
    }

    #{{ selector }} .article-item:nth-child(n+2) > .article-content {
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
      -ms-flex-pack: distribute;
          justify-content: space-around;
      padding-right: 1rem;
    }

    #{{ selector }} .article-content p {
      display: none;
    }
  }
}
