<nav class='nav ui top fixed menu'>
  <div class='nav_wrapper'>
    <a href='{{ site.url }}' class='nav_siteurl'>
      <div class='img_placeholder'>
        <img src="{{ site.theme_url }}/assets/img/yali_logo_mark.svg">
      </div>
      <span href='/yalinav'>Young African Leaders Initiative</span>
    </a>
    <div class='nav_right'>
      <div class='nav_join nav_join--mobile'>
        <p>JOIN THE NETWORK</p>
      </div>
      {% if menu %}
      <ul class='nav_menu'>
        <span class='opaque_bg'></span>
        {% for item in menu %}
          {% set single_post = ( item.title == 'Learning' and is_single() == true ) ? "current_page" : "" %}          
          <li class='nav_menu_item initial_wide'>
            <div class='nav_menu_item_title-wrapper {{ pagename == item.object_slug ? "current_page" : "" }} {{ single_post }}'>
              <a href="{{ item.url }}">{{ item.title }}</a>
              {% if item.children %}
                <span class='menuDropdown downArrow'></span>
              {% endif %}
            </div>
            {% if item.children %}              
              <ul class='nav_menu_submenu'>
                <span class='opaque_bg'></span>
                {% for child in item.children %}                  
                  <li class='nav_menu_submenu_item {{ pagename == child.object_slug ? "current_submenu_page" : "" }}'>                    
                    <a href="{{ child.url }}">{{ child.title }}</a>
                  </li>
                 {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
        <li class='nav_join nav_join--desktop'>
          <p>JOIN THE NETWORK</p>
        </li>
        <li class='nav_menu_item nav_menu_item--search ui search initial_wide'>
          {% include '/partials/searchform.twig' %}          
        </li>
        <li class='nav_menu_item nav_menu_item--social'>
          <div>
            <p>Stay Connected with us:</p>
            <i class='facebook f icon'></i>
            <i class='linkedin icon'></i>
            <i class='twitter icon'></i>
          </div>
        </li>
      </ul>
      {% endif %}
    </div>
    <div class='burger'>
      <span></span>
      <span></span>
      <span></span>
    </div>
    <div class='ui form join'>
    	<span class='upArrow upArrow--joinForm'></span>
    	<div class='join_wrapper'>
    		<h4 class='join_intro'>
    			Join the YALI Network<span class='text_break--joinForm'> and receive updates and<span class='text_break--joinForm'> opportunities to<span class='text_break--joinForm'> collaborate with young<span class='text_break--joinForm'> leaders across Africa.
    		</h4>
    		<div class='formidable_embed'>
    			 {{ formVar }}
    		</div>
    		<span class='close close--join_form'></span>
    	</div>
    </div>
  </div><!-- nav_wrapper -->
</nav>
