{% if show_title == 'yes' %}  	
  {% if title_size == 'h3' %}	  
    <h3 class="{{ title_underline }}" style="text-align: {{ title_alignment }}; color: {{ title_color }}">{{ title }}</h3>
  {% else %}
    <h2 class="{{ title_underline }}" style="text-align: {{ title_alignment }}; color: {{ title_color }}">{{ title }}</h2>
  {% endif %}
{% endif %}