{% extends 'base.twig' %}

{% block main %}	
	<div class='title-header'>{{ post_data["title"]["rendered"] }}</div>

	<div class='main-content main-content--gutter-right'>							
		<div>{{ post_data["content"]["rendered"] | raw }}</div>		
		<hr>		
		<div class='tax_terms'>
			<p>
				{% for cat in categories %}		
				<a href='/category/{{ cat.slug }}'>{{ cat.name | raw }}</a>		
				{% endfor %}
			</p>
			<p>			
				{% for tag in tags %}		
				<a href='/tag/{{ tag.slug }}'><i>{{ tag.name | raw }}</i></a>		
				{% endfor %}			
			</p>
		</div>
	</div><!--main-content -->
	{% include 'sidebar.twig' %}
{% endblock %}
