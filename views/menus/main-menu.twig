<header>	
	<nav class='nav'>
		<ul>
			{% for item in header_menu.get_items %}
			<li class='nav-item'>
				<a href="{{ item.get_link }}">{{ item.title }}</a>
				{% if item.get_children %}
					<ul class='sub-menu'>
						{% for child in item.get_children %}
						<li class='sub-menu-item'>
							<a href="{{child.get_link}}">{{ child.title }}</a>
						</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
			{% endfor %}				
		</ul>
	</nav>
</header>